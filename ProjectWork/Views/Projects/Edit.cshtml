@model ProjectWork.ViewModels.Projects.EditProjectForm

@{
    ViewData["Title"] = "Edit project";
    Layout = "_Layout";
}


<form asp-controller="Projects" asp-action="Edit" style="width: 50%;margin: 0 auto;">
    <div class="form-group">
        <label>Project name</label>
        <input type="text" asp-for="Name" class="form-control">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Customer Company Name</label>
        <input type="text" asp-for="CustomerCompanyName" class="form-control">
        <span asp-validation-for="CustomerCompanyName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Executive Company Name</label>
        <input type="text" asp-for="ExecutiveCompanyName" class="form-control">
        <span asp-validation-for="ExecutiveCompanyName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Date Start</label>
        <input type="date" asp-for="StartDate" class="form-control">
    </div>
    <div class="form-group">
        <label>Date End</label>
        <input type="date" asp-for="EndDate" class="form-control">
    </div>
    <div class="form-group">
        <label>Priority</label>
    </div>
    <select class="form-select" asp-for="Priority">
        <option value="">Select priority</option>
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
    </select>
    <div class="mt-3">
        <input type="submit" class="btn btn-success" value="Save" style="width: 100px"/>
    </div>
</form>

@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function() {
            $('#employee-ids-select-list').select2();
        });
    </script>
}
